  - if(!wp_is_mobile()):
    .sidebarBox 
      //searchbar
      - get_search_form();
      include ./snsLinks
  - endif;

  .sidebarBox
    h2.sidebarBox__title RANKING

    :php
      if (function_exists('sga_ranking_get_date')) {
        $ranking_data = sga_ranking_get_date();
        if ( !empty( $ranking_data ) ) {
            echo '<ol>';
            foreach ( $ranking_data as $post_id ) {
                echo '<li><a href="' . esc_attr(get_permalink($post_id)) . '">' . esc_html(get_the_title($post_id)) . '</a></li>';
            }
            echo '</ol>';
        }
      }
      $args = array( 
        'post_type' => 'post',
        'posts_per_page' => 10, //5件表示
      );
      $the_query = new WP_Query( $args );
    - $sidebar_index = 1;
    - while($the_query->have_posts()) : $the_query->the_post()

      .articleBox--ranking
        - if(has_post_thumbnail()):
        -   the_post_thumbnail("square", array('class'=>'articleBox--ranking--thumbnail'));
        - else:
          img.articleBox--ranking--thumbnail(src="<?= get_stylesheet_directory_uri()?>/public/image/thumb3x3.png")
        - endif;
        .articleBox--ranking--right
          .articleBox--ranking--rank 
            - echo $sidebar_index ++;
          .articleBox--ranking--title
            - the_title();

    - endwhile;
    - $the_query->rewind_posts()


