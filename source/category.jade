extends layouts/basic-layout

block head
  include ./includes/head

block sidebar
  include ./includes/sidebar

block foot
  include ./includes/foot

block content
  .mainBoxContainer
    .mainBox--article
      .breadCrumb
        ul.breadCrumb__list
          li.breadCrumb__item 
            a.breadCrumb__link(href="/") TOP

          li.breadCrumb__item--arrow > 
          li.breadCrumb__item 
            a.breadCrumb__link(href="./") ART ✕ <?= get_the_category()[0]->name ?>



      hr.noBorder

      .contentsLayout--3cols
        ul.contentsLayout__3items
          - $post_index = 0
          - $paged = get_query_var('paged') ? get_query_var('paged') : 1;

          - while ( have_posts() ) : the_post()
            - $post_index ++
            li.contentsLayout__item
              div(class!="<?= $post_index <= 3 ? 'articleBox--smalltop' : 'articleBox' ?>" )
                header.articleBox__header 
                  //<?= $post_index ?>

                  .articleBox__category
                    .articleBox__category--ART ART
                    .articleBox__category--cross ✕
                    .articleBox__category--genre 
                      - $category = get_the_category()[0];
                      | <?=$category->cat_name?> 
                  .articleBox__number <?= get_the_date('n')?>月15日号
                img.articleBox__thumbnail(src="http://kingofwallpapers.com/demo/demo-002.jpg")
                .articleBox__title
                  - the_title();

          - endwhile;
          
      - if(function_exists('wp_pagenavi')) { wp_pagenavi(); };



      
