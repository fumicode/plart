block content
  include ./includes/articleBox

  .mainBoxContainer
    .mainBox--article
      .breadCrumb
        ul.breadCrumb__list
          li.breadCrumb__item 
            a.breadCrumb__link(href="/") TOP

          li.breadCrumb__item--arrow > 
          li.breadCrumb__item 
            a.breadCrumb__link(href="./") ART âœ• <?= get_the_category()[0]->name ?>

      hr.noBorder

      .contentsLayout--3cols
        ul.contentsLayout__3items
          - $post_index = 0
          - while ( have_posts() ) : the_post()
            - $post_index ++

            li.contentsLayout__item
              +articleBox("<?= $post_index <= 3 ? 'smalltop' : '' ?>")


          - endwhile;




      
