block content
  include ./includes/articleBox
  .mainBoxContainer
    .mainBox

      h2.mainBox__title WHAT'S NEW 
      .contentsLayout--1big2small
        .contentsLayout--1big2small--big

          #sliderBox.sliderBox
            :php
              $args = array( 
                'post_type' => 'post',
                'posts_per_page' => 5, //5件表示
              );

              $the_query = new WP_Query( $args )

            - while($the_query->have_posts()) : $the_query->the_post()
              .sliderBox__slide
                +articleBox("big")

            - endwhile;
            - $the_query->rewind_posts()

        .contentsLayout--1big2small--small

          - if($the_query->have_posts()) : $the_query->the_post()
            +articleBox("smalltop")
          - endif;
          - if($the_query->have_posts()) : $the_query->the_post()
            +articleBox()
          - endif;


      .contentsLayout--3cols
        ul.contentsLayout__3items
          - for($i = 0; $i < 3; $i++):
            - if($the_query->have_posts()) : $the_query->the_post()

              li.contentsLayout__item
                +articleBox()

            - endif;
          - endfor;




      - wp_reset_postdata();

      a.blackButton(href="/articles") VIEW MORE 
    .mainBox


