block content
  include ./includes/articleBox
  .mainBoxContainer
    .mainBox

      h2.mainBox__title WHAT'S NEW 
      .contentsLayout--1big2small
        .contentsLayout--1big2small--big

          #sliderBox.sliderBox
            :php
              $args = array( 
                'post_type' => 'post',
                'posts_per_page' => 5, //5件表示
              );

              $the_query = new WP_Query( $args )

            - while($the_query->have_posts()) : $the_query->the_post()
              .sliderBox__slide
                +articleBox("big")

            - endwhile;
            - $the_query->rewind_posts()

        .contentsLayout--1big2small--small

          - if($the_query->have_posts()) : $the_query->the_post()
            +articleBox("smalltop")
          - endif;
          - if($the_query->have_posts()) : $the_query->the_post()
            +articleBox()
          - endif;


      .contentsLayout--3cols
        ul.contentsLayout__3items
          - for($i = 0; $i < 3; $i++):
            - if($the_query->have_posts()) : $the_query->the_post()

              li.contentsLayout__item
                +articleBox()

            - endif;
          - endfor;




      - wp_reset_postdata();

      a.blackButton(href="/articles") VIEW MORE 
    .mainBox


      h2.mainBox__title BACK NUMBER

      :php
        $args = array( 
          'post_type' => 'post',
          'category_name' => 'cover',
          'posts_per_page' => 3, 
          'offset' => 1
        );
        $the_query = new WP_Query( $args );

      .contentsLayout--1big2small
        - if($the_query->have_posts()) : $the_query->the_post()
          .contentsLayout--1big2small--big
            .sliderBox
              .sliderBox__slide
                +articleBox("big")

        - endif;
        .contentsLayout--1big2small--small

          - if($the_query->have_posts()) : $the_query->the_post()
            +articleBox("smalltop")
          - endif;
          - if($the_query->have_posts()) : $the_query->the_post()
            +articleBox()
          - endif;


      a.blackButton(href="/category/cover") VIEW MORE 

    .mainBox
      img(src="<?= get_stylesheet_directory_uri(); ?>/public/image/PLART_banner_1200_540_170513.jpg")
      img(src="<?= get_stylesheet_directory_uri(); ?>/public/image/PLART_banner_1200_540_170513.jpg")



    .mainBox
      h2.mainBox__title PICK UP ART
      .sliderBox
        .slide
